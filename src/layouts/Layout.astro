---
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title,
  description = "Premium lots with stunning mountain and Connecticut River views in Littleton, NH"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Riverview Subdivision</title>
    <!-- Basic Open Graph tags -->
    <meta property="og:image" content="/videos/background-poster.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="/videos/background-poster.png" />
  </head>
  <body>
    <Navigation />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 14, 165, 233;
    scroll-behavior: smooth;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #fff;
  }
</style>