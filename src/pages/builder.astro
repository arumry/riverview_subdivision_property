const floorPlanPartners = [
  {
    name: "HousePlans.com",
    description:
      "Extensive collection of mountain home designs optimized for scenic views.",
    features: [
      "View-optimized layouts",
      "Mountain architectural styles",
      "Customizable plans",
    ],
    url: "https://www.houseplans.com",
