---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import FaqSection from '../components/FaqSection.astro';

const contactInfo = {
  phone: '(603) 550-5224',
  email: 'info@riverviewsubdivision.com',
  address: '123 Riverview Drive, Littleton, NH 03561',
  hours: 'Mon-Fri: 9AM-5PM | Sat: 10AM-3PM | Sun: By Appointment'
};
---

<Layout title="Contact Us">
  <div class="pt-24 pb-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-center mb-4">Contact Us</h1>
        <p class="text-gray-600 text-center mb-12">
          Interested in learning more about our available lots? We're here to help you find your perfect homesite.
        </p>

        <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
          <h2 class="text-2xl font-semibold mb-6">Send Us a Message</h2>
          <ContactForm />
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          <div class="text-center">
            <a href={`tel:${contactInfo.phone.replace(/[()-\s]/g, '')}`} class="hover:text-primary-600 transition-colors">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
            </a>
            <h3 class="font-semibold mb-2">Phone</h3>
            <p class="text-gray-600">
              <a href={`tel:${contactInfo.phone.replace(/[()-\s]/g, '')}`} class="hover:text-primary-600 transition-colors">
                {contactInfo.phone}
              </a>
            </p>
          </div>

          <div class="text-center">
            <a href={`mailto:${contactInfo.email}`} class="hover:text-primary-600 transition-colors">
              <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
            </a>
            <h3 class="font-semibold mb-2">Email</h3>
            <p class="text-gray-600">
              <a href={`mailto:${contactInfo.email}`} class="hover:text-primary-600 transition-colors">
                {contactInfo.email}
              </a>
            </p>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Hours</h3>
            <p class="text-gray-600">{contactInfo.hours}</p>
          </div>
        </div>
        <FaqSection />
      </div>
    </div>
  </div>
</Layout>